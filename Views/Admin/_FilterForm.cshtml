@using AttendanceApp.ViewModels;
@model FilterViewModelcs



<form method="post" asp-action="Filter">
    <div class="card">
        <div class="card-header">
            <h5 class="card-title border-bottom">Filters</h5>
        </div>
        <div class="card-body">
            <div class="form-group row">
                <div class="col-lg-3">
                    <label class="col-lg-12 col-form-label">From Date</label>
                    <div class="col-lg-12">
                        <input asp-for="From" class="form-control" type="date" />
                    </div>
                </div>
              
               <div class="col-lg-3">
                    <label class="col-lg-12 col-form-label">To Date</label>
                    <div class="col-lg-12">
                        <input asp-for="To" class="form-control" type="date" />
                    </div>
                </div>
               
                <div class="col-lg-3">
                    <label class="col-lg-12 col-form-label">Arrive Late</label>
                    <div class="col-lg-12">
                        <select asp-for="ArriveLate" class="form-control multiselect-select-all-filtering" >
                            <option ></option>
                            <option value="False">False</option>
                            <option value="True">True</option>
                            

                                  </select>
                    </div>
                </div>

                 <div class="col-lg-3">
                    <label class="col-lg-12 col-form-label">Leave Early</label>
                    <div class="col-lg-12">
                        <select asp-for="LeaveEarly" class="form-control multiselect-select-all-filtering" >
                            <option></option>
                            <option value="False">False</option>
                            <option value="True">True</option>
                           

                                  </select>
                    </div>
                </div>
               
            </div>
            <div class="form-group row">
            </div>
        </div>
        <div class="card-footer d-flex justify-content-end align-items-center bg-light border-top-0">
            <button type="submit" class="btn btn-primary">Apply <i class="icon-paperplane ml-2"></i></button>
        </div>
    </div>
</form>